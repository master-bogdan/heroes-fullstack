{
  "compilerOptions": {
    "lib": ["es2021"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "tests",
    "jest.config.ts"
  ],
  "exclude":[
    "./node_modules"
  ]
}